function ve(){
    dirname="$PWD"
    result="${dirname%"${dirname##*[!/]}"}" # extglob-free multi-trailing-/ trim
    result="${result##*/}"                  # remove everything before the last /
    if [[ -d $HOME/apps/miniconda3/envs/$result ]] ; then
      conda activate $result
    elif [[ $result == "utils" ]] ; then
      conda activate "local_cypris"
    else
      conda activate "base"
    fi
}

function dev(){
  p=$(find ~/projects -name "$1" -type d)

  if [ -z "$p" ]; then
    p="-"
  fi
  
  if [ "$p" != "-" ]; then
    tmux new-session -d
    tmux send-keys "cd $p" C-m
    tmux send-keys "vim" C-m
    tmux split-window -v -p 1
    tmux send-keys "cd $p" C-m
    tmux send-keys "ve" C-m
    tmux send-keys "clear" C-m
    tmux select-pane -t 1
    tmux -2 attach-session
  else
    echo "Try again..."
  fi
}

